{
  "compilerOptions": {
    "target"          : "ESNext",
    "module"          : "ESNext",
    "lib"             : ["ESNext"],
    "declaration"     : true,
    "outDir"          : "lib",
    "strict"          : true,
    "esModuleInterop" : true,
		"allowJs"         : true,
		"checkJs"         : true,
		
  },
	"include": [
		"src/**/*.ts",
	],
  "exclude": [
    "node_modules",
    "lib",
		"backup",
    "test",
    "src/**/*.spec.ts"
  ]
}
